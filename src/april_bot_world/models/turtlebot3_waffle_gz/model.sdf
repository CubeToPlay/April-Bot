<?xml version="1.0"?>
<sdf version="1.9">
  <model name="turtlebot3_waffle_fixed">
    <!-- place the model's reference frame so ground is z = 0 -->
    <pose>0 0 0 0 0 0</pose>

    <!-- Base footprint (reference frame on ground) -->
    <link name="base_footprint"/>

    <!-- Base link: center of the base box is at z = half_height (so bottom touches ground) -->
    <link name="base_link">
      <!-- base box height ~= 0.090 -> half = 0.045 -->
      <pose>0 0 0.045 0 0 0</pose>

      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.002</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.002</iyy>
          <iyz>0.0</iyz>
          <izz>0.002</izz>
        </inertia>
      </inertial>

      <!-- realistic base collision & visual box (bottom sits at z=0) -->
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.140 0.140 0.090</size>
          </box>
        </geometry>
      </collision>

      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.140 0.140 0.090</size>
          </box>
        </geometry>
        <material>
          <ambient>1 0 0 1</ambient>
          <diffuse>1 0 0 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
    </link>

    <!-- Wheels: wheel axle height ~ 0.043 m above ground (wheel radius 0.033 + small clearance -> axle ~0.043)
         base_link center at 0.045 -> wheel_link z relative to base_link = 0.043 - 0.045 = -0.002 -->
    <!-- Left Wheel -->
    <link name="wheel_left_link">
      <!-- x y z roll pitch yaw; rotate wheel so cylinder's axis points along local Y (cylinder default axis is Z,
           rotating -pi/2 about X maps Z->Y) -->
      <pose>0.0 0.08 -0.045 -1.5708 0 0</pose>

      <inertial>
        <mass>0.12</mass>
        <inertia>
          <ixx>0.0005</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.0005</iyy>
          <iyz>0.0</iyz>
          <izz>0.0005</izz>
        </inertia>
      </inertial>

      <collision name="wheel_left_collision">
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.018</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="wheel_left_visual">
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.018</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Right Wheel -->
    <link name="wheel_right_link">
      <pose>0.0 -0.08 -0.045 -1.5708 0 0</pose>

      <inertial>
        <mass>0.12</mass>
        <inertia>
          <ixx>0.0005</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.0005</iyy>
          <iyz>0.0</iyz>
          <izz>0.0005</izz>
        </inertia>
      </inertial>

      <collision name="wheel_right_collision">
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.018</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="wheel_right_visual">
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.018</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Caster (rear) ball: radius ~ 0.012 m, center sits at z = radius above ground -->
    <link name="caster_back_link">
      <!-- position rear of robot: x = -0.081; relative base_link center z = 0.045, so caster z = 0.012 - 0.045 = -0.033 -->
      <pose>-0.081 0 -0.066 0 0 0</pose>

      <inertial>
        <mass>0.02</mass>
        <inertia>
          <ixx>0.00002</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.00002</iyy>
          <iyz>0.0</iyz>
          <izz>0.00002</izz>
        </inertia>
      </inertial>

      <collision name="caster_collision">
        <geometry>
          <sphere>
            <radius>0.012</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.5</mu>
              <mu2>0.5</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="caster_visual">
        <geometry>
          <sphere>
            <radius>0.012</radius>
          </sphere>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- LiDAR link -->
    <link name="base_scan">
      <!-- place lidar near top of base; base_link center is 0.045; lidar center ~0.045 + 0.18 = 0.225 -->
      <pose>-0.032 0 0.112 0 0 0</pose>
      <inertial>
        <mass>0.125</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.001</iyy>
          <iyz>0.0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>

      <collision name="lidar_collision">
        <geometry>
          <cylinder>
            <radius>0.0508</radius>
            <length>0.055</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="lidar_visual">
        <geometry>
          <cylinder>
            <radius>0.0508</radius>
            <length>0.055</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual>

      <sensor name="lidar" type="gpu_lidar">
        <topic>/scan</topic>
        <update_rate>10</update_rate>
        <gz_frame_id>base_scan</gz_frame_id>
        <always_on>true</always_on>
        <visualize>false</visualize>
        <lidar>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1.0</resolution>
              <min_angle>0.0</min_angle>
              <max_angle>6.283185</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.12</min>
            <max>3.5</max>
            <resolution>0.015</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </lidar>
      </sensor>
    </link>

    <!-- Camera -->
    <link name="camera_rgb_frame">
      <!-- put camera near front/top of base -->
      <pose>0.073 -0.011 0.127 0 0 0</pose>
      <inertial>
        <mass>0.035</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.001</iyy>
          <iyz>0.0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>

      <sensor name="camera" type="camera">
        <topic>/camera/image_raw</topic>
        <gz_frame_id>camera_rgb_frame</gz_frame_id>
        <camera>
          <horizontal_fov>1.085595</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.05</near>
            <far>8.0</far>
          </clip>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.007</stddev>
          </noise>
        </camera>
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>false</visualize>
      </sensor>
    </link>

    <!-- Joints -->
    <joint name="base_joint" type="fixed">
      <parent>base_footprint</parent>
      <child>base_link</child>
    </joint>

    <!-- wheel joints: spin around local Y (0 1 0) and match cylinder rotation (-pi/2 about X) -->
    <joint name="wheel_left_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_left_link</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <joint name="wheel_right_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_right_link</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <!-- caster joint: allow free rotation (ball joint) -->
    <joint name="caster_back_joint" type="ball">
      <parent>base_link</parent>
      <child>caster_back_link</child>
    </joint>

    <joint name="lidar_joint" type="fixed">
      <parent>base_link</parent>
      <child>base_scan</child>
    </joint>

    <joint name="camera_joint" type="fixed">
      <parent>base_link</parent>
      <child>camera_rgb_frame</child>
    </joint>

    <!-- Diff Drive Plugin -->
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>wheel_left_joint</left_joint>
      <right_joint>wheel_right_joint</right_joint>
      <wheel_separation>0.160</wheel_separation>
      <wheel_radius>0.033</wheel_radius>
      <odom_publish_frequency>50</odom_publish_frequency>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_footprint</child_frame_id>
    </plugin>

    <!-- Joint State Publisher -->
    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <topic>/joint_states</topic>
    </plugin>

    <!-- Pose Publisher -->
    <plugin filename="gz-sim-pose-publisher-system" name="gz::sim::systems::PosePublisher">
      <publish_link_pose>true</publish_link_pose>
      <publish_sensor_pose>true</publish_sensor_pose>
      <publish_collision_pose>false</publish_collision_pose>
      <publish_visual_pose>false</publish_visual_pose>
      <publish_nested_model_pose>true</publish_nested_model_pose>
      <update_frequency>50</update_frequency>
    </plugin>

  </model>
</sdf>
